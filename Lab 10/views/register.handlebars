{{!--

registration handelbars

--}}


<h1>{{title}}</h1>
<p id="error" class="errorMessage" hidden></p>
<p id="errorMessage" class="errorMessage" hidden>{{errorMessage}}</p>

<form id="signup-form" name="signup-form" action="/register" method="POST">
    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" />
    </div>

    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" />
    </div>

    <div>
        <label for="userId">User ID:</label>
        <input type="text" id="userId" name="userId" />
    </div>

    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />
    </div>

    <div>
        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" />
    </div>

    <div>
        <label for="favoriteQuote">Favorite Quote:</label>
        <input type="text" id="favoriteQuote" name="favoriteQuote" />
    </div>

    <div>
        <label for="backgroundColor">Background Color:</label>
        <input type="color" id="backgroundColor" name="backgroundColor" />
    </div>

    <div>
        <label for="fontColor">Font Color:</label>
        <input type="color" id="fontColor" name="fontColor" />
    </div>

    <div>
        <label for="role">Role:</label>
        <select id="role" name="role">
            <option value="superuser">Super User</option>
            <option value="user">User</option>
        </select>
    </div>

    <div>
        <button type="submit" id="submitButton" name="submitButton">Sign Up</button>
    </div>
</form>

<p>
    <a id="loginlink" class="navlink" href="/login">Already have an account? Click here to sign-in</a>
</p>
<p>
    <a id="homelink" class="navlink" href="/">Home</a>
</p>